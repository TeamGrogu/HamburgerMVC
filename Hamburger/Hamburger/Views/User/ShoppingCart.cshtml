@model ShoppingCartVM
<link rel="stylesheet" href="~/css/cart.css">

<div class="h-100 gradient-custom">
    <div class="container py-5">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">
                            Cart - @((Model.Products.Count() + Model.Menus.Count())) items
                        </h5>
                    </div>
                    <div class="card-body">
                        @if(Model.Menus != null)
                        {
                            @foreach (Menu menu in Model.Menus)
                            {
                                <!-- Single item -->
                                <div class="row">
                                    <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                        <!-- Image -->
                                        <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                            <img src="@menu.MenuImage"
                                                 class="w-100"/>
                                            <a href="#!">
                                                <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                            </a>
                                        </div>
                                        <!-- Image -->
                                        <div class="form-group">
                                            <label class="control-label"></label>
                                            @Html.DropDownListFor(x => x.Size.SizeID, Model.Dropdown, new { @class = "form-control text-center" })
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                        <!-- Data -->
                                        <p><strong>@menu.MenuName</strong></p>
                                        @foreach (var menuProduct in menu.MenuProducts)
                                        {
                                            if (menuProduct.Product.CategoryID == 1)
                                            {
                                                foreach (var topping in Model.Toppings)
                                                {
                                                    bool isToppingSelected = menuProduct.Product.ProductToppings
                                                    .Any(productTopping => productTopping.ToppingID == topping.ID);
                                                    if(isToppingSelected)
                                                    {
                                                        <input type="checkbox" checked="true"/> @topping.ToppingName <br />
                                                    }

                                                }
                                            }
                                        }
                                        <!-- Data -->
                                    </div>

                                    <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                        <!-- Quantity -->
                                        <div class="d-flex mb-4" style="max-width: 300px">
                                            <button class="btn gradient-custom px-3 me-2" style="height:45px;"
                                                    onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                                <i class="fas fa-minus text-white"></i>
                                            </button>

                                            <div class="form-outline">
                                                <input id="form1" min="1" name="quantity" value="1" type="number" class="form-control text-center" />
                                                <label class="form-label" for="form1">Quantity</label>
                                                
                                            </div>

                                            <button class="btn gradient-custom px-3 ms-2" style="height:45px;"
                                                    onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                                <i class="fas fa-plus text-white"></i>
                                            </button>
                                        </div>
                                        <!-- Quantity -->
                                        <button type="button" class="btn btn-danger btn-sm me-1 mb-2 float-end" data-mdb-toggle="tooltip"
                                                title="Remove item">
                                            <a asp-controller="User" asp-action="RemoveItem" asp-route-id="@menu.ID" class="text-white text-decoration-none"><i class="fas fa-trash-alt text-white"></i>Remove Item</a>
                                        </button>
                                        <!-- Price -->
                                        <p class="text-start text-md-center" style="margin-top:0px;">
                                            <strong>@menu.Price <span>&#8378</span></strong>
                                        </p>
                                        <!-- Price -->
                                    </div>
                                </div>
                                <!-- Single item -->
                                <hr class="my-4" />
                            }
                        }
                        
                        @if (Model.Products != null)
                        {
                            @foreach (Product product in Model.Products)
                            {
                                <!-- Single item -->
                                <div class="row">
                                    <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                        <!-- Image -->
                                        <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                            <img src="@product.ProductImage"
                                                 class="w-100" />
                                            <a href="#!">
                                                <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                            </a>
                                        </div>
                                        <!-- Image -->
                                        <div class="form-group">
                                            <label class="control-label"></label>
                                            @Html.DropDownListFor(x => x.Size.SizeID, Model.Dropdown, new { @class = "form-control text-center" })
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                        <!-- Data -->
                                        <p><strong>@product.ProductName</strong></p>
                                    </div>

                                    <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                        <!-- Quantity -->
                                        <div class="d-flex mb-4" style="max-width: 300px">
                                            <button class="btn gradient-custom px-3 me-2" style="height:45px;"
                                                    onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                                <i class="fas fa-minus text-white"></i>
                                            </button>

                                            <div class="form-outline">
                                                <input id="form1" min="1" name="quantity" value="1" type="number" class="form-control text-center" />
                                                <label class="form-label" for="form1">Quantity</label>
                                            </div>

                                            <button class="btn gradient-custom px-3 ms-2" style="height:45px;"
                                                    onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                                <i class="fas fa-plus text-white"></i>
                                            </button>
                                        </div>
                                        <!-- Quantity -->
                                        <button type="button" class="btn btn-danger btn-sm me-1 mb-2 float-end" data-mdb-toggle="tooltip"
                                                title="Remove item">
                                            <a asp-controller="User" asp-action="RemoveItem" asp-route-id="@product.ID" class="text-white text-decoration-none"><i class="fas fa-trash-alt text-white"></i>Remove Item</a>
                                        </button>
                                        <!-- Price -->
                                        <p class="text-start text-md-center">
                                            <strong>@product.Price <span>&#8378</span></strong>
                                        </p>
                                        <!-- Price -->
                                    </div>
                                </div>
                                <!-- Single item -->
                                <hr class="my-4" />
                            }
                        }
                    </div>
                </div>
                <div class="card mb-4 mb-lg-0">
                    <div class="card-body">
                        <p><strong>We accept</strong></p>
                        <img class="me-2" width="45px"
                             src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                             alt="Visa" />
                        <img class="me-2" width="45px"
                             src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                             alt="American Express" />
                        <img class="me-2" width="45px"
                             src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                             alt="Mastercard" />
                        @*<img class="me-2" width="45px"
                             src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce/includes/gateways/paypal/assets/images/paypal.webp"
                             alt="PayPal acceptance mark" />*@
                    </div>
                </div>
            </div>
            <div class="col-md-4 " style="position:relative">
                <div class="card mb-4" style="position:fixed">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Summary</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            @*<li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                            Products
                            <span>$53.98</span>
                            </li>*@
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Total amount</strong>
                                </div>
                                <span><strong>@Model.Order.TotalPrice <span>&#8378</span></strong></span>
                            </li>
                        </ul>

                        <button asp-action="CompleteOrder" type="button" class="btn gradient-custom btn-lg btn-block">
                            <p style="color:antiquewhite; margin:0px;">Complete Order</p>
                        </button>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
</div>