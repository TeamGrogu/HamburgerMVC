@model List<Category>


<table class="table table-striped table-bordered table-hover table-responsive text-center table-sm">
    <thead>
        <tr>
            <th>ID</th>
            <th>CategoryName</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category category in Model)
        {
            <tr>
                <td>@category.ID</td>
                <td>@category.CategoryName</td>
                <td>
                    <a asp-controller="Admin" asp-action="EditCategory" asp-route-id="@category.ID">
                        <i class="fas fa-pencil text-warning"></i>
                    </a>
                    
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="DeleteCategory" asp-route-id="@category.ID">
                        <i class="fas fa-trash text-danger"></i>
                    </a>                    
                </td>
            </tr>
        }
    </tbody>
</table>
