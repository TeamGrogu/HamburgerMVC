@model List<Topping>


<table class="table table-striped table-bordered table-hover table-responsive text-center table-sm">
    <thead>
        <tr>
            <th>ID</th>
            <th>Topping Name</th>
            <th>Price</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Topping topping in Model)
        {
            <tr>
                <td>@topping.ID</td>
                <td>@topping.ToppingName</td>
                <td>@topping.Price</td>
                <td>
                    <a asp-controller="Admin" asp-action="EditTopping" asp-route-id="@topping.ID">
                        <i class="fas fa-pencil text-warning"></i>
                    </a>

                </td>
                <td>
                    <a asp-controller="Admin" asp-action="DeleteTopping" asp-route-id="@topping.ID">
                        <i class="fas fa-trash text-danger"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
