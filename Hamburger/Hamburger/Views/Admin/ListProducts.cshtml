@model List<Product>


<table class="table table-striped table-bordered table-hover table-responsive text-center table-sm">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Category</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ID</td>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>@product.Category.CategoryName</td>
                <td>
                        <a asp-controller="Admin" asp-action="EditProduct" asp-route-id="@product.ID">
                        <i class="fas fa-pencil text-warning"></i>
                    </a>
                    
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@product.ID">
                        <i class="fas fa-trash text-danger"></i>
                    </a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>