<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="/css/admincrud.css">

@model MenuProductVM

<div class="formbold-main-wrapper">

    <div class="formbold-form-wrapper" style="border: 2px solid #000; padding: 20px;">
        <div class="justify-content-center text-center">
            <img src="~/image/animeburger.png">
        </div>
        
            
      
        <br /><br />
        <form method="post" asp-controller="Admin" asp-action="EditProduct">

            @if (Model.Product.ID != 0)
            {
                <div class="formbold-mb-3">
                    <label asp-for="@Model.Product.ID" class="formbold-form-label">ID</label>
                    <input type="text" asp-for="@Model.Product.ID" class="formbold-form-input" readonly />
                </div>
            }

            <div class="formbold-mb-3">
                <label asp-for="Product.ProductName" class="formbold-form-label">Product Name</label>
                <input type="text" asp-for="Product.ProductName" class="formbold-form-input" />
            </div>

            <div class="formbold-mb-3">
                <label asp-for="Product.Price" class="formbold-form-label">Price</label>
                <input type="text" asp-for="Product.Price" class="formbold-form-input" />
            </div>

            <div class="formbold-mb-3">
                <label asp-for="Product.Description" class="formbold-form-label">Description</label>
                <input type="text" asp-for="Product.Description" class="formbold-form-input" />
            </div>

            <div class="formbold-mb-3">
                <label asp-for="Product.ProductImage" class="formbold-form-label">ImagePath</label>
                <input type="text" asp-for="Product.ProductImage" class="formbold-form-input" />
            </div>


            <div class="formbold-mb-3">
                <label class="formbold-form-label" asp-for="Product.CategoryID">Category Name</label>

                @Html.DropDownListFor(x => x.Product.CategoryID, Model.Dropdown, new { @class="formbold-form-input" })
                <span asp-validation-for="Product.CategoryID" class="text-danger"></span>
            </div>
            <input class="formbold-btn" type="submit" value="@(Model.Product.ID == 0 ? "Create" : "Update")" />
            <br /><br />
            <a asp-controller="Admin" asp-action="ListProducts">
                <i class="fa-solid fa-left-long">
                    <label>Back To List</label>
                </i>
            </a>
    </form>
  </div>
</div>

<script src="https://kit.fontawesome.com/3d366d3709.js" crossorigin="anonymous"></script>﻿


